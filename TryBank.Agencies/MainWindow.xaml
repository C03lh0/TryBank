<Window x:Class="TryBank.Agencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryBank.Agencies"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>

        <ListBox Width="270" Height="290" 
                 Canvas.Top="15"
                 Canvas.Left="15">
            
        </ListBox>
        
        <StackPanel Canvas.Top="15" Canvas.Left="290">
            <TextBlock FontWeight="Bold">Número</TextBlock>
            <TextBlock Name="txtNumber" ></TextBlock>
            <TextBlock FontWeight="Bold">Nome</TextBlock>
            <TextBlock Name="txtName"></TextBlock>
            <TextBlock FontWeight="Bold">Telefone</TextBlock>
            <TextBlock Name="txtPhone"></TextBlock>
            <TextBlock FontWeight="Bold">Descrição</TextBlock>
            <TextBlock Name="txtDescription"></TextBlock>
        </StackPanel>
    </Canvas>
</Window>
